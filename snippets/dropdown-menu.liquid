{% comment %}
  Renders a standard dropdown style menu for the header.

  Usage:
  {% render 'dropdown-menu' %}
{% endcomment %}

{% assign links = links | default: section.settings.menu.links %}

<nav class="dropdown-menu nav-menu">
  <ul class="list-menu list-menu--inline" role="list">
    {%- for link in links -%}
      <li class="list-menu__item list-menu-item--parent{% if link.links != blank %} list-menu-item--has-child{% endif %}{% if link.current %} list-menu-item--current{% elsif link.child_current %} list-menu-item--current-child{% endif %}">
          <a
            href="{{ link.url }}"
            class="menu-link"
            {% if link.current %}
              aria-current="page"
            {% elsif link.child_current %}
              aria-current="true"
            {% endif %}
          >
            <span>{{- link.title | escape -}}</span>
          </a>
          {%- if link.links != blank -%}
            <ul
              class="list-menu__submenu"
              aria-expanded="false"
              role="list"
              tabindex="-1"
            >
              {%- for childlink in link.links -%}
                <li class="list-menu__item menu__item--child">
                  <a
                    href="{{ childlink.url }}"
                    class="menu-link"
                    {% if childlink.current %}
                      aria-current="page"
                    {% endif %}
                  >
                    <span>{{ childlink.title | escape }}</span>
                  </a>
                  {%- if childlink.links != blank -%}
                    <ul class="list-menu__submenu">
                      {%- for grandchildlink in childlink.links -%}
                        <li class="list-menu__item menu__item--child">
                          <a
                            href="{{ grandchildlink.url }}"
                            class="menu-link"
                            {% if grandchildlink.current %}
                              aria-current="page"
                            {% endif %}
                          >
                            <span>{{ grandchildlink.title | escape }}</span>
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>
